<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.content.DetailQuesionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtNameQuesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <ImageView
        android:layout_alignParentStart="true"
        android:id="@+id/imgQuestion"
        android:layout_below="@id/txtNameQuesion"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <LinearLayout
        android:id="@+id/llOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgQuestion"
        android:orientation="vertical">


    </LinearLayout>
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llOption"
        android:textSize="20dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/txt_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescription"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:textColor="@color/black" />


</RelativeLayout>